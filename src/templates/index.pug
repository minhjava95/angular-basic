extends _layout/layout

//- Các giá trị mặc định cho trang web
block variables
	- var title = 'Home'
	- var description = 'Description for home page'
	- var bodyclass = 'home'

//- Phần khai báo body
block body
	.container
		.row
			.col-md-3
				h1 {{message}}
				ul
					li(ng-repeat= "i in menu")
						a(href="{{i.link}}") {{i.name}}
			.col-md-9
				.row(ng-controller="ProductController")
					.col-md-4(ng-repeat= "z in products")
						img.img-fluid(src="{{z.img}}", alt="", srcset="")
			
